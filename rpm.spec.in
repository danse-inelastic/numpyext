# -*- rpm-spec -*-
Name:           @CPACK_PACKAGE_NAME@
Version:        @CPACK_PACKAGE_VERSION@
Release:        @CPACK_PACKAGE_RELEASE@
Summary:        @CPACK_PACKAGE_SUMMARY@
Group:          @CPACK_PACKAGE_APP_GROUP@
Vendor:         @CPACK_PACKAGE_VENDOR@
Packager:       @CPACK_PACKAGE_VENDOR@ <@CPACK_PACKAGE_CONTACT@>

License:        @CPACK_PACKAGE_LICENSE@
Source0:         @CPACK_PACKAGE_NAME@-@CPACK_PACKAGE_VERSION@.tar.gz

BuildRequires:	@CPACK_RPM_PACKAGE_REQUIRES@
Prefix:         @CPACK_PACKAGING_INSTALL_PREFIX@

Requires: gcc-c++
Requires: python
Requires: cmake >= 2.6

%description
@CPACK_PACKAGE_SUMMARY@

%prep
%setup -q

%build
%cmake -DBUILD_TESTING=True .
make %{?_smp_mflags}

%install
rm -rf %{buildroot}
%make_install

%check
ctest -V %{?_smp_mflags}

%files
%defattr(-,root,root,-)
%{_includedir}/portinfo
%{_includedir}/danse/
%{_libdir}/
%doc
